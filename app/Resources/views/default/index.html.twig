 {% for a in Article %}
 <hr/>
 <h2>{{ a.thetitle }}</h2>
    <hr/>
     <h4>{# Si il y a des sections (pas vide) #}
         {% if not a.Section.empty %}
                 {% for c in a.Section %}
                    <a href="{{ path("section",{ 'id': c.id }) }}">{{ c.thetitle }}</a>
